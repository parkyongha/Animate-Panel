<?xml version='1.0' encoding='UTF-8'?>
<ExtensionManifest ExtensionBundleId="com.morph_panel" ExtensionBundleVersion="1.0.0" ExtensionBundleName="morph_panel" Version="8.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ExtensionList>
    <Extension Id="com.morph_panel.panel" Version="1.0.0" />
  </ExtensionList>
  
  <ExecutionEnvironment>
    <HostList>
      <Host Name="FLPR" Version="13.0" /> 
    </HostList>
    <LocaleList>
      <Locale Code="All" />
    </LocaleList>

    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="8.0" />
    </RequiredRuntimeList>

  </ExecutionEnvironment>

  <DispatchInfoList>
    <Extension Id="com.morph_panel.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./index.html</MainPath>          
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
          </CEFCommandLine>

        </Resources>

        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>

        <UI>
          <Type>Panel</Type>
          <Menu>morph_panel</Menu>
          <Geometry>
            <Size>
              <Height>400</Height>
              <Width>500</Width>
            </Size>
            <MaxSize>
              <Height>500</Height>
              <Width>598</Width>
            </MaxSize>
            <MinSize>
              <Height>300</Height>
              <Width>260</Width>
            </MinSize>
          </Geometry>
          <Icons />
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
